@model Treehouse.FitnessFrog.Models.Entry
@using Treehouse.FitnessFrog.Models

@{
    ViewBag.Title = "Delete Entry";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary("We have problems with the following:", new { @class = "alert alert-danger" })
    <div class="row">

        <div class="col-md-6">

            <div class="form-group row">
                <div class="col-md-3">@Html.LabelFor(m => m.Date, new { @class = "control-label" })</div>
                <div class="col-md-9">@Html.DisplayFor(m => m.Date, "{0:d}")</div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Activity.Name, new { @class = "control-label" })
                </div>                <div class="col-md-9">
    @Html.DisplayFor(m => m.Activity.Name)
            </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">@Html.LabelFor(m => m.Duration, new { @class = "control-label" })</div>
                <div class="col-md-9">@Html.DisplayFor(m => m.Duration)</div>
            </div>

        </div>

        <div class="col-md-6">


        </div>

        <div class="col-md-12">
            <div class="pad-top">
                <button type="submit" class="btn btn-danger btn-lg margin-right">
                    <span class="glyphicon glyphicon-exclamation-sign"></span> Delete
                </button>
                <a href="@Url.Action("Index")" class="btn btn-warning btn-lg">
                    <span class="glyphicon glyphicon-backward"></span> Cancel
                </a>
            </div>
        </div>
    </div>
}

